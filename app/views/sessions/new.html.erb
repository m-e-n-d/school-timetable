<div type="border">
<%= form_for(:session, url: login_path) do |f| %>
  <table>
    <tr>
      <td>
        <%= image_tag 'user_icon.png', size: "100x100" %>
      </td>
      <td>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "名前"%>
      </td>
      <td>
      </td>
    </tr>

    <tr>
      <td>
        <%= image_tag 'password_icon.png', size: "100x100" %>
      </td>
      <td>
        <%= f.label :password %>
        <%= f.password_field :password_digest, placeholder: "パスワード" %>
      <td>
      <td>
      </td>
    </tr>
    <tr>
      <td>
      </td>
      <td>
        <%= f.submit "ログイン" %>
      </td>
    </tr>
  </table>
<% end %>
</div>